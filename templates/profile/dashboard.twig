{% extends "base.twig" %}
{% block head %}
    <title>MyWishlist : Dashboard</title>
{% endblock head %}

{% block body %}
    {% include 'navbar.twig' %}
    <div class="boxWrapper animate__animated animate__fadeIn animate__delay-1s" >
        <h1>Liste de {{ auth.getUsername }}</h1>
        {% for list in lists %}
            <div class="boxWrapper animate__animated animate__fadeIn animate__delay-1s" >
                <h1>{{ list.titre }}</h1>
                <div class="schedule">
                    <h2>{{ list.description }}</h2>
                    <p> Date d'Ã©xpiration : {{ list.expiration }}</p>
                </div>
                <button class="dangerButton" onclick="CopiLink('{{ path_for('login') }}liste/{{ list.token }}')">
                    Copier lien
                </button>
            </div>
        {% endfor %}
    </div>
    <script src="/resources/javascript/CopiLink.js"></script>
{% endblock body %}
